#!/bin/bash
set -e

DEV_TOOLS="
bin-composer
bin-mhsendmail
"

for DEV_TOOL in $(echo $DEV_TOOLS); do

  if [ "$MAGE_MODE" == "production" ]; then

    rm -rf "/usr/bin/$binary"

  else

    while [ ! -f "/usr/bin/$DEV_TOOL" ]; do

      if [ "${$DEV_TOOL:0:1}" != "#" ]; then

        (echo >&2 "Waiting for $DEV_TOOL to be ready...")

        sleep 2

      fi

    done

  fi

done
